<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamApplictation" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/new_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_secondary</item>
        <!--     Accent brand color   -->

        <item name="colorAccent">@color/new_accent1</item>

    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">

        <item name="colorPrimary">@color/new_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_secondary</item>
        <!--     Accent brand color   -->

        <item name="colorAccent">@color/new_accent1</item>

    </style>
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">

        <item name="colorPrimary">@color/new_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_secondary</item>
        <!--     Accent brand color   -->

        <item name="colorAccent">@color/new_accent1</item>

    </style>
    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/new_accent2</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#AF6A64</item>

        <item name="iconTint">@color/new_accent2</item>


    </style>

</resources>